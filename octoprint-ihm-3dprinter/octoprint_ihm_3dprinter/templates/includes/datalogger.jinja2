<div class="pluginViewContainer dataloggerContainer" id="dataloggerControl" hidden>

    <h3>Datalogger</h3>

    <div class="row-fluid" id="microwaveSelectControlMode">

        <div class="span4">
            Action
        </div>

        <div class="span2">
            <button class="btn btn-block"
                    type="button"
                    data-bind="click: start, css : {'btn-primary active': active}">
                <i class="icon-play"> </i>
                Start
            </button>
        </div>

        <div class="span2">
            <button class="btn btn-block"
                    type="button"
                    data-bind="click: stop, css : {'active': !active()}">
                <i class="icon-stop"> </i>
                Stop
            </button>
        </div>

        <div class="span2">
            <button class="btn btn-block"
                    type="button"
                    data-bind="click: dump">
                <i class="icon-file"> </i>
                Dump
            </button>
        </div>

    </div>

    <hr>

    <div class="row-fluid">

        <div class="span4">
            Status
        </div>

        <div class="span8">
            <input type="text" data-bind="value: activeLabel" disabled>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span4">
            Records
        </div>

        <div class="span8">
            <input type="text" data-bind="value: records" disabled>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span4">
            Stop after (records)
        </div>

        <div class="span8">
            <input type="text" data-bind="value: stop_duration" disabled>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span4">
            Stop after (time)
        </div>

        <div class="span8">
            <input type="text" data-bind="value: stop_count" disabled>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Filename</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: files">
                    <tr>
                        <td>
                            <span data-bind="text: $data"></span>
                        </td>
                        <td>
                            <form action="/api/plugin/ihm_3dprinter" method="get">
                                <input id="download_datalog"
                                       name="download_datalog"
                                       type="hidden"
                                       data-bind="value: $data">
                                <button class="btn btn-primary"
                                        type="submit">
                                    <i class="icon-download-alt icon-white"> </i>
                                    Download
                                </button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

</div>
